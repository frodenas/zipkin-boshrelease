#!/usr/bin/env bash

#
# Zipkin Web properties
#

# Directory to store the Zipkin Web configuration files
export ZIPKIN_WEB_CONF_DIR=${JOB_DIR}/config

# Directory to store the Zipkin Web log files
export ZIPKIN_WEB_LOG_DIR=${LOG_DIR}

# Directory to store the Zipkin Web process IDs
export ZIPKIN_WEB_PID_DIR=${RUN_DIR}

# Directory to store the Zipkin Web data files
export ZIPKIN_WEB_STORE_DIR=${STORE_DIR}

# Directory to store the Zipkin Web temp files
export ZIPKIN_WEB_TMP_DIR=${TMP_DIR}

# User which will own the Zipkin Web services
export ZIPKIN_WEB_USER="<%= p('zipkin.web.user') %>"

# Group which will own the Zipkin Web services
export ZIPKIN_WEB_GROUP="<%= p('zipkin.web.group') %>"

# Java Heap Size for Zipkin Web
export ZIPKIN_WEB_JAVA_HEAP_SIZE="<%= p('zipkin.web.java_heap_size') %>"

# Zipkin Web server port
export ZIPKIN_WEB_SERVER_PORT="<%= p('zipkin.web.server_port') %>"

# Zipkin Web admin port
export ZIPKIN_WEB_ADMIN_PORT="<%= p('zipkin.web.admin_port') %>"

# Zipkin Web log level
export ZIPKIN_WEB_LOG_LEVEL="<%= p('zipkin.web.loglevel') %>"

# Frequency of Zipkin Web log files rotation
export ZIPKIN_WEB_LOGROTATE_FREQUENCY="<%= p('zipkin.web.logrotate.frequency') %>" \

# Number of times Zipkin Web log files are rotated before being removed
export ZIPKIN_WEB_LOGROTATE_ROTATE="<%= p('zipkin.web.logrotate.rotate') %>" \

# Zipkin Query address
export ZIPKIN_WEB_QUERY_ADDRESS="<%= p('zipkin.query.address') %>"

# Zipkin Query server port
export ZIPKIN_WEB_QUERY_PORT="<%= p('zipkin.query.server_port') %>"
