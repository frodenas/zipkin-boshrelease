#!/usr/bin/env bash

#
# Zipkin Collector properties
#

# Directory to store the Zipkin Collector configuration files
export ZIPKIN_COLLECTOR_CONF_DIR=${JOB_DIR}/config

# Directory to store the Zipkin Collector log files
export ZIPKIN_COLLECTOR_LOG_DIR=${LOG_DIR}

# Directory to store the Zipkin Collector process IDs
export ZIPKIN_COLLECTOR_PID_DIR=${RUN_DIR}

# Directory to store the Zipkin Collector data files
export ZIPKIN_COLLECTOR_STORE_DIR=${STORE_DIR}

# Directory to store the Zipkin Collector temp files
export ZIPKIN_COLLECTOR_TMP_DIR=${TMP_DIR}

# User which will own the Zipkin Collector services
export ZIPKIN_COLLECTOR_USER="<%= p('zipkin.collector.user') %>"

# Group which will own the Zipkin Collector services
export ZIPKIN_COLLECTOR_GROUP="<%= p('zipkin.collector.group') %>"

# Java Heap Size for Zipkin Collector
export ZIPKIN_COLLECTOR_JAVA_HEAP_SIZE="<%= p('zipkin.collector.java_heap_size') %>"
